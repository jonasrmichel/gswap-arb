# GSwap Arbitrage Bot Configuration
# Copy this file to .env and fill in your credentials
# Then run: source .env

# ===========================================
# Bot Settings
# ===========================================
export BOT_UPDATE_INTERVAL_MS=15000
export BOT_VERBOSE=true
export BOT_DRY_RUN=true

# ===========================================
# Arbitrage Settings
# ===========================================
export ARB_MIN_SPREAD_BPS=50
export ARB_MIN_NET_PROFIT_BPS=20
export ARB_DEFAULT_TRADE_SIZE=100

# ===========================================
# GSwap (GalaChain DEX) Credentials
# ===========================================
# For trade execution on GSwap and bridging, you need an Ethereum-compatible private key
# WARNING: Keep your private key secure! Never commit it to version control.
export GSWAP_PRIVATE_KEY=
export GSWAP_WALLET_ADDRESS=
export GSWAP_TRADING_ENABLED=false
export GSWAP_MAX_TRADE_SIZE=100

# ===========================================
# Ethereum RPC (for Bridge)
# ===========================================
# Required for bridging tokens from Ethereum to GalaChain
# Free RPC endpoints: https://eth.llamarpc.com, https://cloudflare-eth.com
export ETH_RPC_URL=https://eth.llamarpc.com

# ===========================================
# Binance Credentials
# ===========================================
# Get your API credentials from: https://www.binance.com/en/my/settings/api-management
export BINANCE_API_KEY=
export BINANCE_SECRET=
export BINANCE_TRADING_ENABLED=false
export BINANCE_MAX_TRADE_SIZE=100

# ===========================================
# Coinbase Credentials
# ===========================================
# Get your API credentials from: https://www.coinbase.com/settings/api
export COINBASE_API_KEY=
export COINBASE_SECRET=
export COINBASE_PASSPHRASE=
export COINBASE_TRADING_ENABLED=false
export COINBASE_MAX_TRADE_SIZE=100

# ===========================================
# Kraken Credentials
# ===========================================
# Get your API credentials from: https://www.kraken.com/u/security/api
export KRAKEN_API_KEY=
export KRAKEN_SECRET=
export KRAKEN_TRADING_ENABLED=false
export KRAKEN_MAX_TRADE_SIZE=100

# ===========================================
# OKX Credentials
# ===========================================
export OKX_API_KEY=
export OKX_SECRET=
export OKX_PASSPHRASE=
export OKX_TRADING_ENABLED=false
export OKX_MAX_TRADE_SIZE=100

# ===========================================
# Bybit Credentials
# ===========================================
export BYBIT_API_KEY=
export BYBIT_SECRET=
export BYBIT_TRADING_ENABLED=false
export BYBIT_MAX_TRADE_SIZE=100

# ===========================================
# Slack Notifications
# ===========================================
export SLACK_ENABLED=false
export SLACK_API_TOKEN=
export SLACK_CHANNEL=

# ===========================================
# Rebalancing Settings
# ===========================================
export REBALANCING_ENABLED=false
export REBALANCING_AUTO_BRIDGE=false
export REBALANCING_REQUIRE_CONFIRMATION=true
export REBALANCING_DRIFT_THRESHOLD_PCT=20
export REBALANCING_CRITICAL_DRIFT_PCT=40
export REBALANCING_CHECK_INTERVAL_SECONDS=300
export REBALANCING_MIN_REBALANCE_USD=50
export REBALANCING_MAX_REBALANCE_USD=1000

# ===========================================
# Cross-Chain Arbitrage Settings
# ===========================================
# Enable cross-chain arbitrage detection (GalaChain <-> Ethereum)
export CROSS_CHAIN_ARB_ENABLED=false

# Minimum spread required to consider a cross-chain opportunity (percentage)
export CROSS_CHAIN_MIN_SPREAD_PCT=3.0

# Minimum risk-adjusted profit after accounting for bridge costs and volatility (basis points)
export CROSS_CHAIN_MIN_RISK_ADJ_PROFIT_BPS=100

# Maximum bridge time allowed (minutes)
export CROSS_CHAIN_MAX_BRIDGE_TIME_MIN=30

# Estimated bridge times by direction (minutes)
export CROSS_CHAIN_BRIDGE_TIME_TO_ETH=15
export CROSS_CHAIN_BRIDGE_TIME_TO_GALA=15

# Volatility model settings
export CROSS_CHAIN_VOLATILITY_WINDOW_MIN=60
export CROSS_CHAIN_DEFAULT_VOLATILITY_BPS=200
export CROSS_CHAIN_CONFIDENCE_MULTIPLIER=2.0

# Allowed tokens for cross-chain arbitrage (comma-separated)
export CROSS_CHAIN_ALLOWED_TOKENS=GALA,GUSDT,GUSDC

# Execution strategy: staged (buy first, then bridge, then sell), immediate, or hedged
export CROSS_CHAIN_EXECUTION_STRATEGY=staged

# Auto-execute cross-chain opportunities (requires confirmation if false)
export CROSS_CHAIN_AUTO_EXECUTE=false
export CROSS_CHAIN_REQUIRE_CONFIRMATION=true
