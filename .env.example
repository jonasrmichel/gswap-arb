# GSwap Arbitrage Bot Configuration
# Copy this file to .env and fill in your credentials

# ===========================================
# Bot Settings
# ===========================================
BOT_UPDATE_INTERVAL_MS=15000    # Price update interval in milliseconds
BOT_VERBOSE=true                 # Enable verbose logging
BOT_DRY_RUN=true                 # Dry run mode (no real trades)

# ===========================================
# Arbitrage Settings
# ===========================================
ARB_MIN_SPREAD_BPS=50           # Minimum spread in basis points (50 = 0.5%)
ARB_MIN_NET_PROFIT_BPS=20       # Minimum net profit after fees (20 = 0.2%)
ARB_DEFAULT_TRADE_SIZE=100      # Default trade size in quote currency

# ===========================================
# GSwap (GalaChain DEX) Credentials
# ===========================================
# For trade execution on GSwap, you need an Ethereum-compatible private key
# WARNING: Keep your private key secure! Never commit it to version control.
GSWAP_PRIVATE_KEY=               # Your wallet private key (with or without 0x prefix)
GSWAP_WALLET_ADDRESS=            # Optional: wallet address (derived from key if not provided)
GSWAP_TRADING_ENABLED=false      # Enable trading on GSwap
GSWAP_MAX_TRADE_SIZE=100         # Maximum trade size on GSwap

# ===========================================
# Binance Credentials
# ===========================================
# Get your API credentials from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=
BINANCE_SECRET=
BINANCE_TRADING_ENABLED=false    # Enable trading on Binance
BINANCE_MAX_TRADE_SIZE=100       # Maximum trade size on Binance

# ===========================================
# Coinbase Credentials
# ===========================================
# Get your API credentials from: https://www.coinbase.com/settings/api
COINBASE_API_KEY=
COINBASE_SECRET=
COINBASE_PASSPHRASE=             # Coinbase requires a passphrase for API access
COINBASE_TRADING_ENABLED=false   # Enable trading on Coinbase
COINBASE_MAX_TRADE_SIZE=100      # Maximum trade size on Coinbase

# ===========================================
# Kraken Credentials
# ===========================================
# Get your API credentials from: https://www.kraken.com/u/security/api
KRAKEN_API_KEY=
KRAKEN_SECRET=
KRAKEN_TRADING_ENABLED=false     # Enable trading on Kraken
KRAKEN_MAX_TRADE_SIZE=100        # Maximum trade size on Kraken

# ===========================================
# OKX Credentials (if enabled)
# ===========================================
OKX_API_KEY=
OKX_SECRET=
OKX_PASSPHRASE=
OKX_TRADING_ENABLED=false
OKX_MAX_TRADE_SIZE=100

# ===========================================
# Bybit Credentials (if enabled)
# ===========================================
BYBIT_API_KEY=
BYBIT_SECRET=
BYBIT_TRADING_ENABLED=false
BYBIT_MAX_TRADE_SIZE=100
